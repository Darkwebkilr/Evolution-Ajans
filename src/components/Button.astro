---
interface Props {
  text: string;
  variant?: "primary" | "secondary";
}
const { text, variant = "primary" } = Astro.props;
---

<button
  type="button"
  class:list={[
    "p-3 rounded-lg text-lg md:text-xl hover:p-5 lg:text-2xl cursor-pointer duration-400",
    variant === "primary" &&
      "bg-transparent border border-green-600 hover:bg-green-600 ",
    variant === "secondary" && "bg-blue-600/90 hover:bg-blue-900",
  ]}
>
  {text}
</button>
