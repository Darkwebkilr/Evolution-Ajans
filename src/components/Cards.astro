---
export interface Props {
  title: string;
  desc: string;
  icon: string;
}

const { title, desc, icon } = Astro.props;
const kontrol = icon.endsWith("json");
const animId = "anim-" + crypto.randomUUID();
import LottieAnimation from "astro-integration-lottie/Lottie.astro";
---

<div
  class="group
    p-6
    rounded-2xl
    bg-neutral-900/60
    border border-neutral-800
    backdrop-blur-md
    transition
    hover:border-blue-400/60
    hover:shadow-[0_0_35px_rgba(59,130,246,0.45)]
    hover:-translate-y-1
    flex
    flex-col
    items-center"
>
  {
    kontrol ? (
      <div class="w-44 h-44 md:w-60 md:h-60">
        <LottieAnimation src={icon} autoplay="visible" />
      </div>
    ) : (
      <img
        src={icon}
        class="w-44 h-44 mb-4 md:w-60 md:h-60 text-neutral-500 group-hover:text-blue-300 transition"
        alt=""
      />
    )
  }

  <h2
    class="text-2xl text-start font-semibold cursor-default text-neutral-200 mb-2 group-hover:text-blue-200 transition"
  >
    {title}
  </h2>

  <p
    class="text-neutral-400 text-start cursor-default text-base leading-relaxed"
  >
    {desc}
  </p>
</div>
