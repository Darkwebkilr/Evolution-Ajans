---
import "../styles/global.css";
import { services } from "../components/data/services.js";
import Cards from "../components/Cards.astro";
---

<section class="container mx-auto mt-20 h-screen text-center">
  <h2
    data-aos="fade-up"
    class="text-transparent p-3 bg-gradient-to-r bg-clip-text from-blue-200 to-green-300 text-4xl font-bold"
    style="text-shadow: 0 0 20px rgba(59,130,246,0.6);"
  >
    Markanızı Büyütmek Mi İstiyorsunuz?
  </h2>
  <div class="grid grid-rows-3 mt-12 px-10 md:grid-cols-3 gap-10">
    {
      services.map((features) => (
        <Cards
          title={features.name}
          desc={features.desc}
          icon={features.icon}
        />
      ))
    }
  </div>
</section>

<script>
  import AOS from "aos";
  AOS.init({
    duration: 800,
    once: true,
  });
</script>
